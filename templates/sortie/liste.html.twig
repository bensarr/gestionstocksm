{% extends 'accueil.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Liste des Sorties</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Quantit√© Vendue</th>
                        <th>Produit</th>
                    </tr>
                    {% for s in sorties %}
                        <tr>
                            <td>{{ s.id }}</td>
                            <td>{{ s.dateS|date('d/m/y') }}</td>
                            <td>{{ s.qtS }}</td>
                            <td>{{ s.produit }}</td>
                    {% else %}
                        <tr>
                            <td class="text-lg-right">Aucune vente</td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Formulaire de gestion des Sorties</div>
            <div class="card-body">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
