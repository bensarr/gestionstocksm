{% extends 'accueil.html.twig' %}

{% block title %}Entrees{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Liste des Entrees</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Quantité Achetée</th>
                        <th>Produit</th>
                    </tr>
                    {% for e in entrees %}
                        <tr>
                            <td>{{ e.id }}</td>
                            <td>{{ e.dateE|date('d/m/y') }}</td>
                            <td>{{ e.qtE }}</td>
                            <td>{{ e.produit }}</td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Formulaire de gestion des Entrees</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
